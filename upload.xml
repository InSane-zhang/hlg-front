<?xml version="1.0" ?>
<project name="refound" default="common" basedir="."  xmlns:ac="antlib:net.sf.antcontrib">
	
	 <!--模块名称-->
	 <property name="module.name" value="common"/>
	 <!--发布目录-->
	 <property name="public.time" value="20130323"/>
	
	<!--js上传目录-->
	<property name="jsupload.dir" value="/js/hlg/v3/${module.name}"/>
    <!--js目录-->
	<property name="js.dir" location="./${module.name}/"/>
   
	<target name="common" depends="upload-js">	
			
	</target>
	<target name="upload-js">	
		<ftp server="ftp.ace.aliyun.com"
			   port="2222"
		       remotedir="${jsupload.dir}"
			   passive ="yes"
		       userid="smart"
		       password=""
		       depends="yes"
			   verbose = "yes">
		    <fileset dir="${js.dir}" includes="**/*.js" />
		 </ftp>
		  
		<ftp server="ftp.ace.aliyun.com"
			   port="2222"
		       remotedir="${jsupload.dir}"
			   passive ="yes"
		       userid="resource"
		       password=""
		       depends="yes"
			   verbose = "yes">
	    	<fileset dir="${js.dir}" includes="**/*.js" />
	  	</ftp>
	  
	  <echo>上传完毕</echo>
  </target>

</project>
